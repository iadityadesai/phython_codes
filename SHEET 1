# Q1)Subtraction Example
value1 = 45
value2 = 17
difference = value1 - value2
print("The result of subtraction is", difference)

# Q2)Multiple Operations
year = 2030
months = 5
total = year + months
diff = year - months
product = year * months
division = year / months
print("Total is", total)
print("Difference is", diff)
print("Product is", product)
print("Quotient is", division)

# Q3) Minutes to Hours
minutes = float(input("Enter the number of minutes: "))
hours = minutes / 60
print("That equals", hours, "hours")

#Q4) Rupees to Dollars
rupees = float(input("Enter the amount of rupees you have: "))
dollars = rupees / 80
print("You have", dollars, "dollars")

# Q5)Dollars to Pounds
usd = float(input("Enter the amount of dollars you have: "))
converted_rupees = usd * 80
pounds = converted_rupees / 95
print("That equals", pounds, "pounds")

# Q6)Kilograms to Grams
weight_kg = float(input("Enter the weight in kilograms: "))
weight_g = weight_kg * 1000
print("That's", weight_g, "grams")

#Q7) Bytes to KB, MB, GB
bytes_value = float(input("Enter the number of bytes: "))
kb_value = bytes_value / 1024
mb_value = kb_value / 1024
gb_value = mb_value / 1024
print("In KB:", kb_value)
print("In MB:", mb_value)
print("In GB:", gb_value)

# Q8)Celsius to Fahrenheit
temp_c = float(input("Enter temperature in Celsius: "))
temp_f = (temp_c * 9/5) + 32
print("Temperature in Fahrenheit:", temp_f)

#Q9) Fahrenheit to Celsius
temp_f2 = float(input("Enter temperature in Fahrenheit: "))
temp_c2 = (temp_f2 - 32) * 5/9
print("Temperature in Celsius:", temp_c2)

#Q10) Simple Interest
principal = float(input("Enter principal amount: "))
time = float(input("Enter time in years: "))
rate = float(input("Enter annual interest rate (%): "))
interest = (principal * rate * time) / 100
print("The simple interest is", interest)

# Q11)Square Area and Perimeter
side = float(input("Enter the side of the square: "))
square_area = side * side
square_perimeter = 4 * side
print("Area of square:", square_area)
print("Perimeter of square:", square_perimeter)

#Q12) Rectangle Area and Perimeter
length = float(input("Enter the rectangle's length: "))
width = float(input("Enter the rectangle's width: "))
rect_area = length * width
rect_perimeter = 2 * (length + width)
print("Area of rectangle:", rect_area)
print("Perimeter of rectangle:", rect_perimeter)

#Q13) Circle Area
radius = float(input("Enter the radius of the circle: "))
circle_area = 3.1416 * radius * radius
print("Area of circle:", circle_area)

# Q14)Triangle Area
triangle_height = float(input("Enter the height of the triangle: "))
triangle_base = float(input("Enter the base length of the triangle: "))
triangle_area = 0.5 * triangle_height * triangle_base
print("Area of triangle:", triangle_area)

#q15) Gross Salary to Net Salary
gross_salary = float(input("Enter your gross salary: "))
allowance = gross_salary * 0.12
deduction = gross_salary * 0.05
net_salary = gross_salary + allowance - deduction
print("Your net salary is", net_salary)

#Q16) Gross Sales to Net Sales
gross_sales = float(input("Enter your gross sales: "))
commission = gross_sales * 0.08
net_sales = gross_sales - commission
print("Your net sales after 8% deduction is", net_sales)

# Q17)Marks and Average
sub1 = float(input("Enter marks in Math: "))
sub2 = float(input("Enter marks in English: "))
sub3 = float(input("Enter marks in Science: "))
total_marks = sub1 + sub2 + sub3
average_marks = total_marks / 3
print("Total marks:", total_marks)
print("Average marks:", average_marks)

# Q18)Swapping values
x = float(input("Enter first number (x): "))
y = float(input("Enter second number (y): "))
print("Before swapping: x =", x, "and y =", y)
x, y = y, x
print("After swapping: x =", x, "and y =", y)
